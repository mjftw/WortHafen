<.header>
  Listing Words
  <:actions>
    <.link href={~p"/words/new"}>
      <.button>New Word</.button>
    </.link>
  </:actions>
</.header>

<.table id="words" rows={@words} row_click={&JS.navigate(~p"/words/#{&1}")}>
  <:col :let={word} label="In german"><%= word.in_german %></:col>
  <:col :let={word} label="In english"><%= word.in_english %></:col>
  <:col :let={word} label="Example usage"><%= word.example_usage %></:col>
  <:action :let={word}>
    <div class="sr-only">
      <.link navigate={~p"/words/#{word}"}>Show</.link>
    </div>
    <.link navigate={~p"/words/#{word}/edit"}>Edit</.link>
  </:action>
  <:action :let={word}>
    <.link href={~p"/words/#{word}"} method="delete" data-confirm="Are you sure?">
      Delete
    </.link>
  </:action>
</.table>
